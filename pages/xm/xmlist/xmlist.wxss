}
.title image{
  width: 100%;
  height: 200rpx;
}
.title text{
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: 1rpx;
  left: 1rpx;
  z-index: 100;
}
.search{
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    margin: 0 auto;
}
.search input {
    background: url(../../../images/search_logo.png) no-repeat 225rpx 24rpx;
    background-size: 30rpx;
    background-repeat: no-repeat;
    color: #898989;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    text-align: center;
}

.fenge{
    width: 100%;
    height: 20rpx;
    background-color: #eee;
}
.guifan{
    width: 90%;
    margin: 0 auto;
}
.guifan-biaoti{
    height: 70rpx;
    color: #898989;
    font-size: 28rpx;
}
.guifan-item{
    padding: 20rpx 0;
    border-bottom: 1rpx solid #ccc;
}
.guifan-title{
    height: 60rpx;
    color: #000;
    font-size: 28rpx;
}
.guifan-bianhao{
    height: 50rpx;
    color: #898989;
    font-size: 24rpx;
}